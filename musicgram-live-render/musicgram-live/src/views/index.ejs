
<section class="card">
  <div class="stories">
    <% (new Array(8)).fill(0).forEach((_,i)=>{ %>
      <div class="story">
        <div class="ring"><div class="avatar"></div></div>
        <div class="small">story<%= i+1 %></div>
      </div>
    <% }) %>
  </div>
</section>

<% if (!posts.length) { %>
  <div class="card empty">Seu feed est√° vazio. Publique algo ou siga pessoas em <a href="/explore"><b>Explorar</b></a>.</div>
<% } %>

<% posts.forEach(p => { %>
  <article class="post card">
    <div class="head">
      <div class="avatar"></div>
      <div>
        <div><a href="/profile/<%= p.username %>"><b><%= p.username %></b></a></div>
        <div class="small"><%= new Date(p.created_at).toLocaleString() %></div>
      </div>
    </div>
    <div class="img"><img src="<%= p.image_url %>" alt=""></div>
    <div class="bar"><svg class="icon"><use href="/public/icons.svg#heart"/></svg></div>
    <% if (p.caption) { %><div class="cap"><b><%= p.username %></b> <%= p.caption %></div><% } %>
  </article>
<% }) %>
