<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title><%= title || "Elance" %></title>
  <link rel="stylesheet" href="/public/style.css"><!-- seu css antigo, se existir -->
  <link rel="stylesheet" href="/public/elance.css"><!-- novo visual Elance -->
</head>
<body class="elance">
  <div class="el-shell">
    <header class="el-header">
      <div class="el-brand">
        <div class="el-logo"></div><span>ELANCE</span>
      </div>

      <form class="el-search" action="/search" method="get">
        <input name="q" placeholder="Buscar no Elance…">
        <svg class="el-ico" viewBox="0 0 24 24"><use href="/public/icons.svg#ico-search"></use></svg>
      </form>

      <div class="el-actions">
        <button class="el-btn-ico" aria-label="Notificações">
          <svg class="el-ico" viewBox="0 0 24 24"><use href="/public/icons.svg#ico-bell"></use></svg>
        </button>
        <img class="el-avatar" src="/public/avatar.png" alt="Perfil">
      </div>
    </header>

    <aside class="el-sidebar">
      <nav class="el-nav">
        <a href="/" class="<%= (active==='home') ? 'is-active' : '' %>">
          <svg class="el-ico" viewBox="0 0 24 24"><use href="/public/icons.svg#ico-home"></use></svg>Home
        </a>
        <a href="/discover" class="<%= (active==='discover') ? 'is-active' : '' %>">Discover</a>
        <a href="/network" class="<%= (active==='network') ? 'is-active' : '' %>">Network</a>
        <a href="/messages" class="<%= (active==='messages') ? 'is-active' : '' %>">Messages</a>
        <a href="/projects" class="<%= (active==='projects') ? 'is-active' : '' %>">Projects</a>
        <a href="/profile" class="<%= (active==='profile') ? 'is-active' : '' %>">Profile</a>
      </nav>
    </aside>

    <main class="el-main">
      <%- body %>
    </main>
  </div>
</body>
</html>
