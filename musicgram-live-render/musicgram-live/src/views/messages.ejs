
<section class="card">
  <h3 style="margin:0 0 8px 0">Mensagens</h3>
  <% if (!threads.length) { %><div class="empty">Nenhuma conversa ainda.</div><% } %>
  <% threads.forEach(t => { %>
    <div style="display:flex;justify-content:space-between;align-items:center;padding:10px 0;border-top:1px solid var(--line)">
      <div>@<%= t.other_username %> <span class="small"><%= t.unread ? ('Â· '+t.unread+' novas') : '' %></span></div>
      <a class="btn" href="/chat/<%= t.id %>">Abrir</a>
    </div>
  <% }) %>
</section>
